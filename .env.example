# GTM Advisor Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - LLM Providers
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# REQUIRED - Data Source APIs
# =============================================================================
# Perplexity AI (for market research and web search)
PERPLEXITY_API_KEY=pplx-...

# NewsAPI (for news and market trends)
NEWSAPI_API_KEY=...

# EODHD (for financial/company data)
EODHD_API_KEY=...

# =============================================================================
# OPTIONAL - LinkedIn Integration (for lead generation)
# =============================================================================
# LINKEDIN_CLIENT_ID=...
# LINKEDIN_CLIENT_SECRET=...

# =============================================================================
# Core Infrastructure (GTM_ prefix)
# =============================================================================
GTM_ENVIRONMENT=development  # development | staging | production

# Database (optional for MVP - uses in-memory by default)
# GTM_POSTGRES_URL=postgresql://localhost:5432/gtm_advisor
# GTM_REDIS_URL=redis://localhost:6379
# GTM_QDRANT_URL=http://localhost:6333

# Security
GTM_JWT_SECRET=dev-secret-change-in-production-32chars
GTM_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# Gateway Service (GATEWAY_ prefix)
# =============================================================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_ENVIRONMENT=development
GATEWAY_JWT_SECRET_KEY=dev-secret-change-in-production-32chars

# =============================================================================
# Observability (optional for MVP)
# =============================================================================
# GTM_JAEGER_URL=http://localhost:6831
# PROMETHEUS_PORT=9090

# =============================================================================
# Feature Flags
# =============================================================================
GTM_ENABLE_GOVERNANCE=true
GTM_ENABLE_OBSERVABILITY=false  # Enable in production
GTM_DEFAULT_LLM_PROVIDER=openai

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Subscription tiers: FREE, TIER1, TIER2 (defined in packages/database/src/models.py)
# Rate limits (requests per day)
GTM_RATE_LIMIT_FREE_REQUESTS=10
GTM_RATE_LIMIT_TIER1_REQUESTS=100
GTM_RATE_LIMIT_TIER2_REQUESTS=500

# Analysis limits (per day)
GTM_RATE_LIMIT_FREE_ANALYSES=3
GTM_RATE_LIMIT_TIER1_ANALYSES=20
GTM_RATE_LIMIT_TIER2_ANALYSES=100
